<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/full_black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/movement_amount"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/text_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/movement_description"
        android:textStyle="bold"
        android:textColor="@color/text_white"
        android:layout_below="@+id/movement_amount"
        android:layout_alignRight="@+id/movement_amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/movement_date"
        android:textStyle="bold"
        android:textColor="@color/text_white"
        android:layout_below="@+id/movement_description"
        android:layout_alignRight="@+id/movement_amount" />
</RelativeLayout><!-- From: file:/Users/roquerueda/Documents/GitHub/CashFlowsAS/app/src/main/res/layout/movement_list_item.xml -->