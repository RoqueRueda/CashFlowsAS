<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/full_black">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:textColor="@color/text_white"
        android:text="@string/money_symbol" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accounts_spinner"
        android:layout_below="@+id/divider"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:background="@color/divider_blue"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/account_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/accounts"
        android:id="@+id/account_header"
        android:layout_below="@+id/amount_text"
        android:layout_alignParentLeft="true"
        android:textColor="@color/text_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/additional"
        android:id="@+id/additional_header"
        android:textColor="@color/text_white"
        android:layout_below="@+id/accounts_spinner"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/additional_divider"
        android:layout_width="wrap_content"
        android:background="@color/divider_blue"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/additional_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/date"
        android:id="@+id/date_indicator"
        android:textColor="@color/text_white"
        android:layout_below="@+id/additional_divider"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/current_date"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_alignTop="@+id/date_indicator"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes"
        android:id="@+id/textView4"
        android:textColor="@color/text_white"
        android:layout_below="@+id/current_date"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/current_date"
        android:layout_alignParentRight="true" />


</RelativeLayout>
